<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Default state -->
    <item tools:ignore="StateListReachable">
        <shape>
            <solid android:color="#74B44A" /> <!-- Background color -->
            <corners android:radius="4dp" /> <!-- Rounded corners, adjust the radius as needed -->
        </shape>
    </item>
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#0056B3" /> <!-- Background color when pressed -->
            <corners android:radius="4dp" /> <!-- Rounded corners, adjust the radius as needed -->
        </shape>
    </item>
</selector>
